package Day07;

import java.util.Scanner;

public class doWhileEx01 {
	public static void main(String[] args) {

		//1~10까지 출력
//		int i = 0;
//		do {
//			i++;
//			System.out.print(i + " ");
//		}while(i<=10);
		
		
		Scanner sc = new Scanner(System.in);
//		char cha = sc.next().charAt(0);
		char cha;
		
		do {
			System.out.println("한글자를 입력해주세요 (Y, y)는 종료입니다.");
			cha = sc.next().charAt(0); 
			System.out.println(cha);
//			if(cha == 'Y' || cha == 'y') {
//				System.out.println("종료 Y y 등이 입력되었음");
//				break;
//			} 
		} while (!(cha == 'Y' || cha == 'y'));//무한루프
		System.out.println("종료 Y y 등이 입력되었음");
	}
	/*
	 * do~while 문을 이용하여 값을 입력하면 그대로 출력 단, y/Y가 입력되면 종료
	 */
}

		for (int i = 1; i <= 5; i++) {
			for (int j = 6 - i; j >= 1; --j) {
				System.out.print("*");
			}
			System.out.println();
		}


		
		for (int i = 1; i <= 5; i++) {
			for (int j = 5 - i; j >= 1; --j) {
				System.out.print(" ");
			}
			for (int j = 1; j <= i; j++) {
				System.out.print("*");
			}
			System.out.println(" ");
		}
		
		
		
		for(int i=1;i<=5;i++) {
			//공백
			for(int k=1; k<=5-i; k++) {
				System.out.print(" ");
			}
			//별
			for(int j=1; j<=i ;j++) {
				System.out.print("*");
			}
			System.out.println();
			
		}
		
		
	}

}

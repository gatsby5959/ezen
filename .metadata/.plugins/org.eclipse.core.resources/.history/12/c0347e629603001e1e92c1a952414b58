package Day09;

public class Method05 {
	public static void main(String[] args) {
		/*
		 * 최대공약수, 최소공배수 메서드
		 */
		 System.out.println(gcd(5, 15));  //최대공약수
		 System.out.println(lcm(5, 15));	//최대공배수
	}
	
	/*
	 * 두 정수를 매개변수로 받아, 최대공약수를 리턴하는 메서드
	 * 매개변수 : 두정수(int num1, int num2)
	 * 리턴타입 : 최대공약수 int
	 * 매서드명 : gcd
	 */
	public static int gcd(int num1, int num2) {
		
		int a = num1;
		int b = num2;

		int result = 0;
		int i = 1;
		for (i = 1; i <= b; i++) {
			if ((a % i == 0) && (b % i == 0)) {
				result = i;
			}
		}
//		System.out.println(maxnum + " 입니다.");
		return result;
	}
	
	
	
	/*
	 * 두정수를 매개변수로 받아 최소공배수를 리턴하는 메서드
	 * 매개변수 : 두정수(int num1, int num2)
	 * 리턴타입 : 최소공배수(int)
	 * 메서드명 : lcm
	 */
	public static int lcm(int num1, int num2) {
		
		int a = num1;
		int b = num2;
		int minnum = 0;
		for (minnum = num1;; minnum = minnum + num1) {
			if ((minnum % num1 == 0) && (minnum % num2 == .0)) {
//				System.out.print("최소공배수" + minnum + " ");
				break;
			}
		}
//		System.out.println(maxnum + " 입니다.");
		return minnum;
	}
}
